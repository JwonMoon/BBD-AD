<?xml version="1.0" encoding="UTF-8"?>
<dds xmlns="http://www.eprosima.com/XMLSchemas/fastRTPS_Profiles">
  <profiles>
    <transport_descriptors>
      <transport_descriptor>
        <transport_id>udp_transport</transport_id>
        <type>UDPv4</type>
        <interfaceWhiteList>
  	    <address>192.168.10.2</address>
	    <address>192.168.20.1</address>
    	</interfaceWhiteList>
        <sendBufferSize>8388608</sendBufferSize>         <!-- 1MB -->
        <receiveBufferSize>8388608</receiveBufferSize>   <!-- 1MB -->
        <TTL>1</TTL> <!-- TTL 낮게 설정: 로컬 서브넷에만 전파 -->
      </transport_descriptor>
    </transport_descriptors>

    <participant profile_name="participant_profile">
      <rtps>
        <useBuiltinTransports>true</useBuiltinTransports>
        <userTransports>
          <transport_id>udp_transport</transport_id>
        </userTransports>
	<builtin>
	  <avoid_builtin_multicast>true</avoid_builtin_multicast> <!-- 🔒 멀티캐스트 비활성화 -->
          <metatrafficUnicastLocatorList>
		<locator address="192.168.10.1" port="7400"/>
		<locator address="192.168.20.2" port="7400"/>
          </metatrafficUnicastLocatorList>
          <metatrafficMulticastLocatorList>
            <locator address="0.0.0.0" port="7401"/>
          </metatrafficMulticastLocatorList>
	</builtin>
        <sendSocketBufferSize>8388608</sendSocketBufferSize>
        <listenSocketBufferSize>8388608</listenSocketBufferSize>
      </rtps>
    </participant>

  </profiles>
</dds>

