<?xml version="1.0" encoding="UTF-8"?>
<dds xmlns="http://www.eprosima.com/XMLSchemas/fastRTPS_Profiles">
  <profiles>

    <transport_descriptors>
      <transport_descriptor>
        <transport_id>udp_transport</transport_id>
        <type>UDPv4</type>
        <interfaceWhiteList>
          <address>192.168.20.2</address> <!-- orin1 RECV -->
          <address>192.168.30.1</address> <!-- desktop RECV -->
  	</interfaceWhiteList>
	<TTL>1</TTL> <!-- TTL 낮게 설정: 로컬 서브넷에만 전파 -->
      </transport_descriptor>
    </transport_descriptors>

    <participant profile_name="participant_profile">
      <rtps>
        <useBuiltinTransports>true</useBuiltinTransports>
        <userTransports>
          <transport_id>udp_transport</transport_id>
        </userTransports>

	<builtin>
          <avoid_builtin_multicast>true</avoid_builtin_multicast> <!--Disable Multicast -->
          <metatrafficUnicastLocatorList>
            <locator address="192.168.20.1" port="7400"/> <!-- orin1 SEND -->
            <locator address="192.168.30.2" port="7400"/> <!-- desktop SEND -->
          </metatrafficUnicastLocatorList>
          <metatrafficMulticastLocatorList>
            <locator address="0.0.0.0" port="7401"/>
          </metatrafficMulticastLocatorList>
  	</builtin>
      </rtps>
    </participant>

  </profiles>
</dds>

