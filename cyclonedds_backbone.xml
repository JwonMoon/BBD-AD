<CycloneDDS xmlns="https://cdds.io/config">
  <Domain Id="any">
    <General>
      <Interfaces>
        <NetworkInterface name="enx1c860b2bb191" /> <!-- orin2의 192.168.1.6 USB NIC -->
      </Interfaces>
      <AllowMulticast>false</AllowMulticast>
      <MaxMessageSize>65500B</MaxMessageSize>
    </General>
    <Internal>
      <SocketReceiveBufferSize min="10MB"/>
    </Internal>
    <Discovery>
      <Peers>
        <Peer address="192.168.1.7"/> <!-- orin1 -->
      </Peers>
    </Discovery>
  </Domain>
</CycloneDDS>

